@model IEnumerable<Report>
@{
    ViewData["Title"] = "Şikayetler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Anket Şikayetleri</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tarih</th>
            <th>Şikayet</th>
            <th>Anket</th>
            <th>Kullanıcı</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var entry in Model)
        {
            <tr>
                <td>@entry.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td>@entry.Reason</td>
                <td><a href="/Survey/Details/@entry.SurveyId">Ankete Git</a></td>
                <td>@entry.User.UserName</td>
            </tr>
        }
    </tbody>
</table>

